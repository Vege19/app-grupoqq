<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/itemServiceNameTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Service name"
        android:textColor="@color/colorSecondaryText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/itemServiceCheckBox"
        android:layout_marginEnd="16dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <CheckBox
        android:id="@+id/itemServiceCheckBox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/itemServiceNameTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/itemServiceNameTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>