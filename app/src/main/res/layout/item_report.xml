<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itemReportImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/itemReportDescriptionTxt"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/colorPrimaryText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/itemReportImg"
            app:layout_constraintTop_toTopOf="@+id/itemReportImg"
            tools:text="Report description" />

        <TextView
            android:id="@+id/itemReportDateTxt"
            style="@style/TextAppearance.Compat.Notification.Info"
            android:layout_width="0dp"
            android:textColor="@color/colorSecondaryText"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/itemReportDescriptionTxt"
            app:layout_constraintStart_toStartOf="@+id/itemReportDescriptionTxt"
            app:layout_constraintTop_toBottomOf="@+id/itemReportDescriptionTxt"
            tools:text="Report date" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>